{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "{{ cookiecutter.project_slug }}": {
      "root": "",
      "sourceRoot": "projects/src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/{{ cookiecutter.project_slug }}",
            "index": "projects/src/index.html",
            "main": "projects/src/main.ts",
            "polyfills": "projects/src/polyfills.ts",
            "tsConfig": "projects/src/tsconfig.app.json",
            "assets": [
              "projects/src/favicon.ico",
              "projects/src/assets"
            ],
            "styles": [
              "projects/src/app/styles/main.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "projects/src/app"
              ]
            },
            "scripts": []
          },
          "configurations": {
            "hmr": {
              "fileReplacements": [
                {
                  "replace": "projects/src/environments/environment.ts",
                  "with": "projects/src/environments/environment.hmr.ts"
                }
              ]
            },
            "staging": {
              "fileReplacements": [
                {
                  "replace": "projects/src/environments/environment.ts",
                  "with": "projects/src/environments/environment.stage.ts"
                }
              ]
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/src/environments/environment.ts",
                  "with": "projects/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "{{ cookiecutter.project_slug }}:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "{{ cookiecutter.project_slug }}:build:production"
            },
            "hmr": {
              "hmr": true,
              "browserTarget": "{{ cookiecutter.project_slug }}:build:hmr"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "{{ cookiecutter.project_slug }}:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/src/test.ts",
            "polyfills": "projects/src/polyfills.ts",
            "tsConfig": "projects/src/tsconfig.spec.json",
            "karmaConfig": "projects/src/karma.conf.js",
            "assets": [
              "projects/src/favicon.ico",
              "projects/src/assets"
            ],
            "styles": [
              "projects/src/app/styles/main.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "projects/src/app"
              ]
            },
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/src/tsconfig.app.json",
              "projects/src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "projects/src/app/shared/interceptors/fake-backend.ts",
              "projects/src/polyfills.ts"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "{{ cookiecutter.project_slug }}"
}
