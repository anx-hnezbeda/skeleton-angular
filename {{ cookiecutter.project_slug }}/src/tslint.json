{
  "extends": [
    "../tslint.json",
    "tslint-sonarts"
  ],
  "rules": {
    "directive-selector": [
      true,
      "app"
    ],
    "component-selector": [
      true,
      "app",
      "anx-"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-module"
    ],
    "no-inferrable-types": false,
    "no-duplicate-variable": true
  }
}
